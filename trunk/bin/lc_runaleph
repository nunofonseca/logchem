LOGCHEM_DIR=/home/nf/Research/Projects/WIP/logchem/LogCHEM2
if [ "-$LOGCHEM_DIR" = "-" ]; then
    echo "ERROR: LOGCHEM_DIR is not configured...exiting."
    exit
fi
cd $1
/usr/local/bin/yap << EOF 
['$LOGCHEM_DIR/lib/pl/aleph.pl'].
read_all('$2').
induce.
write_rules.
EOF

